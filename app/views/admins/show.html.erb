<h1><%= @application.name  %></h1>
<p>Address:<%= " #{@application.street_address} #{@application.city}, #{@application.state}, #{@application.zip_code}"%>
<p>Why Would You Be a Good Home:<%= " #{@application.description}" %></p>
<p>Pets Applied For: <% @application.pets.each do |pet| %></p>
<%= "#{pet.name}" %>
  <% if pet.approved?(@application.id) %>
    <p> Pet Approved </p>
  <% elsif pet.rejected?(@application.id) %>
  <p> Pet Rejected </p>
  <% else %>
    <%= button_to "Approved", "/applications/#{@application.id}/pets/#{pet.id}", method: :patch, name: 'status', value: "Approved"%>
    <%= button_to "Rejected", "/applications/#{@application.id}/pets/#{pet.id}", method: :patch, name: 'status', value: "Rejected" %>
  <% end %>
<% end %>
<p>Status:<%= "#{@application.status}" %></p>
